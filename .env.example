# Development Environment Configuration
# Copy this to .env and replace with your actual values

# Azure General Configuration
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group-name

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-primary-key
COSMOS_DB_DATABASE_ID=MovieDB
COSMOS_DB_CONTAINER_ID=Movies

# Alternative naming convention (also supported)
# COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-primary-key
# COSMOS_DATABASE_ID=MovieDB
# COSMOS_CONTAINER_ID=Movies

# Azure OpenAI Configuration  
OPENAI_ENDPOINT=https://openai-intell.openai.azure.com/
OPENAI_KEY=your-openai-key
OPENAI_LLM_DEPLOYMENT_NAME=gpt-4o
OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# Alternative naming convention (also supported)
# LLM_DEPLOYMENT_NAME=gpt-4o
# EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002
